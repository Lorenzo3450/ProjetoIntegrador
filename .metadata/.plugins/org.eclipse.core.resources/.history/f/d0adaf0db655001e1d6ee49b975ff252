package controller.Ferramentas;

import javafx.beans.property.DoubleProperty;
import javafx.beans.property.IntegerProperty;
import javafx.beans.property.StringProperty;
import javafx.beans.property.SimpleDoubleProperty;
import javafx.beans.property.SimpleIntegerProperty;
import javafx.beans.property.SimpleStringProperty;

public class DetalhesLucro {
    private final StringProperty nomeProduto;
    private final IntegerProperty quantidadeAdquirida;
    private final IntegerProperty quantidadeVendida;
    private final DoubleProperty valorCompradoUnidade;
    private final DoubleProperty valorVendidoUnidade;
    private final DoubleProperty custoTotal;
    private final DoubleProperty receitaTotal;
    private final DoubleProperty lucroTotal;

    public DetalhesLucro(String nomeProduto, int quantidadeAdquirida, int quantidadeVendida,
            double valorCompradoUnidade, double valorVendidoUnidade, double custoTotal, double receitaTotal,
            double lucroTotal) {
        this.nomeProduto = new SimpleStringProperty(nomeProduto);
        this.quantidadeAdquirida = new SimpleIntegerProperty(quantidadeAdquirida);
        this.quantidadeVendida = new SimpleIntegerProperty(quantidadeVendida);
        this.valorCompradoUnidade = new SimpleDoubleProperty(valorCompradoUnidade);
        this.valorVendidoUnidade = new SimpleDoubleProperty(valorVendidoUnidade);
        this.custoTotal = new SimpleDoubleProperty(custoTotal);
        this.receitaTotal = new SimpleDoubleProperty(receitaTotal);
        this.lucroTotal = new SimpleDoubleProperty(lucroTotal);
    }

    // Getters para as propriedades
    public StringProperty nomeProdutoProperty() {
        return nomeProduto;
    }

    public IntegerProperty quantidadeAdquiridaProperty() {
        return quantidadeAdquirida;
    }

    public IntegerProperty quantidadeVendidaProperty() {
        return quantidadeVendida;
    }

    public DoubleProperty valorCompradoUnidadeProperty() {
        return valorCompradoUnidade;
    }

    public DoubleProperty valorVendidoUnidadeProperty() {
        return valorVendidoUnidade;
    }

    public DoubleProperty custoTotalProperty() {
        return custoTotal;
    }

    public DoubleProperty receitaTotalProperty() {
        return receitaTotal;
    }

    public DoubleProperty lucroTotalProperty() {
        return lucroTotal;
    }

    // MÃ©todos getters para os valores
    public String getNomeProduto() {
        return nomeProduto.get();
    }

    public int getQuantidadeAdquirida() {
        return quantidadeAdquirida.get();
    }

    public int getQuantidadeVendida() {
        return quantidadeVendida.get();
    }

    public double getValorCompradoUnidade() {
        return valorCompradoUnidade.get();
    }

    public double getValorVendidoUnidade() {
        return valorVendidoUnidade.get();
    }

    public double getCustoTotal() {
        return custoTotal.get();
    }

    public double getReceitaTotal() {
        return receitaTotal.get();
    }

    public double getLucroTotal() {
        return lucroTotal.get();
    }
}