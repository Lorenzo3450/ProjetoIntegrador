package model.Gestor;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.SQLException;

import model.dao.ConexãoBD;

public class TelaDeCadastrarProdutoDao {

    public void cadastraProduto(String codigoDeBarras, String dataCompra, String descricao,
            String precoUnidade, String quantidadeTotal, String validade, String vendidoUnidade) throws SQLException {

    	
    
        // Conexão com o banco de dados
        Connection conexão = ConexãoBD.Conexao();

        // Comando SQL para inserir um novo produto
        String comandoSQL = "INSERT INTO produtos (codigo_de_barras, data_compra, descricao, preco_unidade, quantidade_total, validade, vendido_unidade) VALUES (?, ?, ?, ?, ?, ?, ?)";

        PreparedStatement stmt = conexão.prepareStatement(comandoSQL);

        // Define os valores dos parâmetros
        stmt.setString(1, codigoDeBarras);
        stmt.setString(2, dataCompra);
        stmt.setString(3, descricao);
        stmt.setString(4, precoUnidade);
        stmt.setString(5, quantidadeTotal);
        stmt.setString(6, validade);
        stmt.setString(7, vendidoUnidade);

        // Executa o comando SQL
        stmt.execute();

        // Fecha a conexão e o statement
        stmt.close();
        conexão.close();
    }
}
