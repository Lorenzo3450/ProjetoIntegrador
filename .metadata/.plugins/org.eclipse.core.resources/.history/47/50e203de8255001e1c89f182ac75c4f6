package controller.Ferramentas;

import javafx.beans.property.DoubleProperty;
import javafx.beans.property.SimpleDoubleProperty;
import javafx.beans.property.StringProperty;
import javafx.beans.property.SimpleStringProperty;

public class DetalhesLucro {
    private final StringProperty nomeProduto;
    private final DoubleProperty faturamento;
    private final DoubleProperty porcentagem;

    public DetalhesLucro(String nomeProduto, double faturamento, double porcentagem) {
        this.nomeProduto = new SimpleStringProperty(nomeProduto);
        this.faturamento = new SimpleDoubleProperty(faturamento);
        this.porcentagem = new SimpleDoubleProperty(porcentagem);
    }

    public StringProperty nomeProdutoProperty() {
        return nomeProduto;
    }

    public DoubleProperty faturamentoProperty() {
        return faturamento;
    }

    public DoubleProperty porcentagemProperty() {
        return porcentagem;
    }

    public String getNomeProduto() {
        return nomeProduto.get();
    }

    public double getFaturamento() {
        return faturamento.get();
    }

    public double getPorcentagem() {
        return porcentagem.get();
    }

    public void setPorcentagem(double porcentagem) {
        this.porcentagem.set(porcentagem);
    }
}
